{
  "name": "covid-act-now",
  "version": "1.0.0",
  "description": "CovidActNow.org API client",
  "main": "index.js",
  "dependencies": {
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@types/node": "^16.4.0",
    "@types/node-fetch": "^2.5.11",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.2",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "ava": "^3.15.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.31.0",
    "eslint-config-xo": "^0.37.0",
    "eslint-config-xo-typescript": "^0.43.0",
    "esm": "^3.2.25",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.1",
    "npm-run-all": "^4.1.5",
    "proxyquire": "^2.1.3",
    "sinon": "^11.1.1",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5",
    "xo": "^0.42.0"
  },
  "scripts": {
    "test": "npm-run-all lint:* test:*",
    "test:unit": "cross-env TS_NODE_PROJECT=tsconfig.ava.json ava",
    "lint": "npm-run-all lint:*",
    "lint:tsc": "tsc --noEmit",
    "lint:lint": "xo --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kolyaventuri/covid-act-now.git"
  },
  "keywords": [
    "covid",
    "api"
  ],
  "author": "Kolya Venturi <me@kolya.co>",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/kolyaventuri/covid-act-now/issues"
  },
  "homepage": "https://github.com/kolyaventuri/covid-act-now#readme",
  "lint-staged": {
    "*": [
      "xo --fix"
    ]
  },
  "xo": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    },
    "extends": [
      "xo-typescript",
      "plugin:@typescript-eslint/recommended"
    ],
    "extensions": [
      "ts"
    ],
    "space": true,
    "compilerOptions": {
      "strict": true
    },
    "rules": {
      "@typescript-eslint/camelcase": 0,
      "@typescript-eslint/naming-convention": [
        "error",
        {
          "selector": "memberLike",
          "modifiers": [
            "private"
          ],
          "format": [
            "camelCase"
          ],
          "leadingUnderscore": "requireDouble"
        }
      ],
      "indent": 0,
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "@typescript-eslint/no-explicit-any": 0
    },
    "overrides": [
      {
        "files": "test/**/*.ts",
        "rules": {
          "@typescript-eslint/explicit-function-return-type": 0
        }
      }
    ],
    "settings": {
      "react": {
        "version": "16.5"
      }
    },
    "env": [
      "browser",
      "node"
    ],
    "include": [
      "**/*.ts?(x)"
    ],
    "ignore": [
      "*.js",
      "scripts/**/*"
    ]
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "test/**/*.test.ts?(x)"
    ],
    "require": [
      "esm",
      "ts-node/register",
      "tsconfig-paths/register"
    ]
  }
}
