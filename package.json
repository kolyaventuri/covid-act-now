{
  "name": "@kolyaventuri/covid-act-now",
  "version": "1.0.1",
  "description": "CovidActNow.org API client",
  "main": "lib/index.js",
  "dependencies": {
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.2.3",
    "@types/fs-extra": "^9.0.12",
    "@types/node": "^16.4.0",
    "@types/node-fetch": "^2.5.11",
    "@types/proxyquire": "^1.3.28",
    "@types/rimraf": "^3.0.1",
    "@types/sinon": "^10.0.2",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "ava": "^3.15.0",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^7.31.0",
    "eslint-config-xo": "^0.37.0",
    "eslint-config-xo-typescript": "^0.43.0",
    "esm": "^3.2.25",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.1",
    "npm-run-all": "^4.1.5",
    "proxyquire": "^2.1.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.53.3",
    "rollup-plugin-dts": "^3.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^11.1.1",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5",
    "xo": "^0.42.0"
  },
  "scripts": {
    "test": "npm-run-all lint:* test:unit",
    "test:unit": "cross-env TS_NODE_PROJECT=tsconfig/tsconfig.ava.json ava --config ava.base.cjs test/unit/**/*.ts",
    "test:integration": "cross-env TS_NODE_PROJECT=tsconfig/tsconfig.ava.json ava --config ava.integration.cjs test/integration/helpers/env.ts test/integration/**/*.test.ts",
    "lint": "npm-run-all lint:*",
    "lint:tsc": "tsc --noEmit",
    "lint:lint": "xo --fix",
    "build": "TS_NODE_PROJECT=tsconfig/tsconfig.build.json rollup -c",
    "prebuild": "rimraf ./lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kolyaventuri/covid-act-now.git"
  },
  "keywords": [
    "covid",
    "api",
    "health",
    "data"
  ],
  "author": "Kolya Venturi <me@kolya.co>",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/kolyaventuri/covid-act-now/issues"
  },
  "homepage": "https://github.com/kolyaventuri/covid-act-now#readme",
  "lint-staged": {
    "*": [
      "xo --fix"
    ]
  },
  "xo": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    },
    "extends": [
      "xo-typescript",
      "plugin:@typescript-eslint/recommended"
    ],
    "extensions": [
      "ts"
    ],
    "space": true,
    "compilerOptions": {
      "strict": true
    },
    "rules": {
      "ava/no-ignored-test-files": 0,
      "@typescript-eslint/camelcase": 0,
      "@typescript-eslint/no-non-null-assertion": 0,
      "@typescript-eslint/naming-convention": [
        "error",
        {
          "selector": "memberLike",
          "modifiers": [
            "private"
          ],
          "format": [
            "camelCase"
          ],
          "leadingUnderscore": "requireDouble"
        }
      ],
      "indent": 0,
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "@typescript-eslint/no-explicit-any": 0
    },
    "overrides": [
      {
        "files": "test/**/*.ts",
        "rules": {
          "@typescript-eslint/explicit-function-return-type": 0,
          "@typescript-eslint/no-unsafe-member-access": 0
        }
      }
    ],
    "settings": {
      "react": {
        "version": "16.5"
      }
    },
    "env": [
      "browser",
      "node"
    ],
    "include": [
      "**/*.ts?(x)"
    ],
    "ignore": [
      "*.js",
      "*.cjs"
    ]
  }
}
